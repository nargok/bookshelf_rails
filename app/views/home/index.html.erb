<div class="row">
  <% if user_signed_in? %>
    <div class="col-md-3 col-12 d-none d-md-block">
        <div class="card p-2">
          <%= image_tag current_user.avatar.url, class: "card-img-top rounded-circle" %>
          <div class="card-body">
            <h4 class="card-title"><%= @user.nickname %></h4>
            <p class="card-text">
              <span class="text-secondary">ここにユーザ情報が入ります。</span>
            </p>
          </div>
        </div>
    </div>
    <div class="col-md-9 col-12">
      <!-- 検索条件を指定してindexアクションを実行する-->
      <%= form_for @search_form, as: :search, url: :home, html: { method: :get } do |f| %>
        <div class="input-group pb-4 mx-0">
          <!--TODO モーダルをやめて画面遷移にする modalにすることのメリットを感じないため-->
          <%= f.text_field :title, class: "form-control" %>
          <span class="input-group-btn">
            <button class="btn btn-primary">
              検索
            </button>
          </span>
        </div>
        <div class="modal fade" id="book_input">
          <%= render partial: 'learnings_field' %>
        </div>
      <% end %>
      <%= render partial: 'book', collection: @books %>
    </div>
  <% else %>
    <div class="col-12">
      <%= render partial: 'book', collection: @books %>
    </div>
  <% end %>
</div>
